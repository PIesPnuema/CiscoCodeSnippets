    // Initial Configurations
    // -----------------------
    // This section is for cisco Initial Configurations. Feel free to add notes that are helpful to know when adding configurations
    //

    "Cisco Initial Configuration": {
        "prefix": "cInitial",
        "scope": "cisco",
        "body": [
            "enable",
            "configure terminal",
            "hostname <DEVICE NAME>",
            "enable secret <DEVICE PASSWORD>",
            "username <DEVICE USERNAME> secret <DEVICE PASSWORD>",
            "line con 0",
            "logging synchronous",
            "login local",
            "line vty 0 4",
            "logging synchronous",
            "login local"
        ],
        "description": "Cisco Initial Configuration"
    },
    "VLAN Creation": {
        "prefix": "vlan",
        "scope": "cisco",
        "body": [
            "vlan ",
            "name ",
        ],
        "description": "Cisco vlan creation"
    },
    "Host names": {
        "prefix": "cHost",
        "scope": "cisco",
        "body": [
            "  ip host <NAME FOR HOST, EX: rtrCA01> <HOST_IP_ADDRESS>",
            " "
        ],
        "description": "local machine DNS adds host name to IP address"
    },

